<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Calculadora de suma</title>
    <link rel="stylesheet" href="css/indexCalculadora.css">
  </head>
  <body>
    <h1>Calculadora de suma</h1>
    <form>
      <label for="componente1">Componente 1:</label>
      <input type="number" id="componente1" name="componente1"><br>
      <label for="componente2">Componente 2:</label>
      <input type="number" id="componente2" name="componente2"><br>
      <button type="button" onclick="calcular()">Calcular</button><br>
      <label for="resultado">Resultado:</label>
      <input type="text" id="resultado" name="resultado" readonly>
    </form>

    <script>
      function calcular() {
        // Obtener los valores de los componentes
        let componente1 = parseFloat(document.getElementById("componente1").value);
        let componente2 = parseFloat(document.getElementById("componente2").value);

        // Calcular la suma
        let resultado = componente1 + componente2;

        // Mostrar el resultado
        document.getElementById("resultado").value = resultado;
        alert('El resultado de la suma es: ' + resultado);
      }
    </script>
  </body>
</html>


